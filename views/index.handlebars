<div class="container">
    <div class="row">
        <h1>Eat Da Burger</h1>
    </div>
    
    <div class="row">
        <form class="create-form">
            <input type="text" id="burger" name="burger">
            <button type="submit">Add Burger</button>
        </form>
    </div>

    <div class="row">
        <div class="col-md-5 col-md-offset-2">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li>
                            {{burger_name}}
                            <button class="btn" data-id={{id}} data-status={{devoured}}>Devour It!</button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-5">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>
                            {{burger_name}}
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>